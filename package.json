{
    "name": "ascend-avoid",
    "version": "1.0.0",
    "description": "A multiplayer game where players need to ascend and avoid obstacles",
    "main": "index.html",
    "type": "module",
    "scripts": {
        "dev": "npm run kill-ports && concurrently -k \"npm:dev:client\" \"npm:dev:server\" --names \"CLIENT,SERVER\" --prefix-colors \"cyan,green\"",
        "kill-ports": "kill-port 3000 5173 || true",
        "dev:client": "vite --open",
        "dev:server": "cd server && tsx --watch index.ts",
        "dev:legacy": "start.bat",
        "start": "npm run dev",
        "build": "npm run build:client && npm run build:server",
        "build:client": "vite build",
        "build:server": "cd server && tsc",
        "start:prod": "cd server && node dist/index.js",
        "preview": "vite preview",
        "serve:dist": "vite preview",
        "lint": "eslint src/**/*.{ts,js} server/**/*.{ts,js}",
        "lint:fix": "eslint --fix src/**/*.{ts,js} server/**/*.{ts,js}",
        "test": "vitest run",
        "test:watch": "vitest watch",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "type-check": "tsc --noEmit && cd server && tsc --noEmit",
        "clean": "rimraf dist server/dist node_modules/.cache",
        "clean:all": "rimraf node_modules server/node_modules package-lock.json server/package-lock.json",
        "install:all": "npm install && cd server && npm install"
    },
    "keywords": [
        "game",
        "canvas",
        "javascript",
        "html5",
        "responsive"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/body-parser": "^1.19.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jsdom": "^21.1.7",
        "@types/ms": "^2.1.0",
        "@types/node": "^22.14.0",
        "@types/qs": "^6.14.0",
        "@types/range-parser": "^1.2.7",
        "@types/send": "^0.17.5",
        "@types/serve-static": "^1.15.8",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "@vitejs/plugin-legacy": "^6.0.2",
        "@vitest/coverage-v8": "^3.1.2",
        "@vitest/ui": "^3.1.2",
        "concurrently": "^9.1.2",
        "eslint": "^8.23.0",
        "jsdom": "^26.1.0",
        "kill-port": "^2.0.1",
        "rimraf": "^5.0.10",
        "tsx": "^4.19.2",
        "typescript": "^5.8.3",
        "vite": "^6.2.5",
        "vite-plugin-checker": "^0.9.1",
        "vite-plugin-node-polyfills": "^0.23.0",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "dependencies": {
        "buffer": "^6.0.3",
        "colyseus.js": "^0.15.0",
        "cors": "^2.8.5",
        "express": "^4.19.2"
    }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* For mixed JS/TS projects */
    "allowJs": true,
    "checkJs": false,
    
    /* Type Checking */
    "strict": false,         /* Start with false for gradual migration */
    "noImplicitAny": false,  /* Start with false, enable later */
    "strictNullChecks": false,
    
    /* Path aliases to match your vite config */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/js/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
